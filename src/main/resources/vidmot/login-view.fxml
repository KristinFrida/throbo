<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="bakendi.UserController"
            fx:id="loginRoot"
            stylesheets="@../css/styles.css"
            prefWidth="600" prefHeight="400">

    <VBox fx:id="loginBox" spacing="15" alignment="CENTER"
          AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50"
          AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">

        <Label fx:id="loginTitle" text="Login"/>

        <Label fx:id="usernameLabel" text="Username:"/>
        <TextField fx:id="fxUsername" promptText="Enter username"/>

        <Label fx:id="passwordLabel" text="Password:"/>
        <PasswordField fx:id="fxPassword" promptText="Enter password"/>
        <HBox fx:id="loginButtonRow" spacing="10" alignment="CENTER">
            <Button fx:id="fxLoginButton" onAction="#onLogin" text="Login"/>
            <Button fx:id="fxCancelButton" onAction="#goToHome" text="Cancel"/>
        </HBox>
        <Button fx:id="fxSignUpLink" onAction="#goToSignUp" text="Don't have an account? Sign up here"/>
    </VBox>
</AnchorPane>
