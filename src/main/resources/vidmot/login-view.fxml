<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vidmot.UserController">

    <HBox spacing="20" AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">

        <VBox prefWidth="200.0" alignment="CENTER">
            <Label maxHeight="428.0" maxWidth="227.0" prefHeight="428.0" prefWidth="227.0" style="-fx-background-color: pink;" text="Eitthvað nafn/fallegt" textAlignment="CENTER" />
        </VBox>

        <VBox fx:id="loginBox" alignment="CENTER" spacing="15" prefWidth="300.0">
            <Label text="Eitthvað nafn/ heiti" />

            <HBox spacing="10">
                <Label  styleClass="label-text" text="Username:"/>
                <TextField fx:id="fxUsername" prefHeight="33.0" prefWidth="204.0" promptText="Enter username" styleClass="input-field" />
            </HBox>

            <HBox spacing="10">
                <Label  styleClass="label-text" text="Password:"/>
                <PasswordField fx:id="fxPassword" prefHeight="33.0" prefWidth="204.0" promptText="Enter password" styleClass="input-field" />
            </HBox>

            <Button onAction="#skraSigInn" prefHeight="33.0" prefWidth="204.0" styleClass="login-button" text="Login" />
            <Button onAction="#goToHome" prefHeight="33.0" prefWidth="204.0" text="Cancel" />
            <Button onAction="#goToSignUp" prefHeight="33.0" prefWidth="204.0" text="Dont have an account? Sign up here"/>
        </VBox>
    </HBox>
</AnchorPane>
