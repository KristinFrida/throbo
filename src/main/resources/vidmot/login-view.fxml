<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="vidmot.HelloController"
            stylesheets="/css/styles.css"
            prefHeight="200.0" prefWidth="300.0">


    <VBox fx:id="loginBox" spacing="15" alignment="CENTER" prefWidth="400" prefHeight="300"
          AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="100" AnchorPane.rightAnchor="100">


        <Label text="Username:" styleClass="styles.css" />
        <TextField fx:id="fxUsername" prefWidth="200"/>


        <Label text="Password:" styleClass="styles.css" />
        <PasswordField fx:id="passwordField" prefWidth="200" />


    </VBox>




    <Button text="← Go Back" onAction="#goToHome"
            layoutX="100" layoutY="660" prefHeight="35" prefWidth="120"
            style="-fx-font-size: 14px; -fx-background-color: transparent;
               -fx-border-color: #bbb; -fx-border-radius: 20px;
               -fx-text-fill: #333; -fx-padding: 5px;" />


</AnchorPane>
