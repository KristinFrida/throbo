<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="vidmot.MyPageController"
            stylesheets="@../css/styles.css"
            prefWidth="1000.0" prefHeight="700.0">

   <!-- Page Title -->
   <VBox spacing="10" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="30.0">
      <Label text="Day Tours Booking" styleClass="page-title"/>
      <Label fx:id="outputUsername" text="Welcome" styleClass="title-label"/>
   </VBox>

   <!-- User Info -->
   <VBox spacing="5" AnchorPane.topAnchor="100.0" AnchorPane.leftAnchor="30.0">
      <Label text="Name:" styleClass="info-label"/>
      <Label fx:id="userNameLabel" styleClass="user-info"/>
      <Label text="Email:" styleClass="info-label"/>
      <Label fx:id="userEmailLabel" styleClass="user-info"/>
   </VBox>

   <!-- Table of Bookings -->
   <TableView fx:id="bookingTable" layoutX="30.0" layoutY="220.0"
              prefWidth="940.0" prefHeight="350.0" styleClass="table-view">
      <columns>
         <TableColumn fx:id="tourNameColumn" text="Tour Name" prefWidth="220.0"/>
         <TableColumn fx:id="peopleColumn" text="People" prefWidth="100.0"/>
         <TableColumn fx:id="dateColumn" text="Date" prefWidth="150.0"/>
         <TableColumn fx:id="pickupColumn" text="Pickup" prefWidth="100.0"/>
         <TableColumn fx:id="cancelColumn" text="Cancel" prefWidth="120.0"/>
      </columns>
   </TableView>

   <!-- Bottom Buttons -->
   <HBox spacing="15" alignment="CENTER_LEFT"
         AnchorPane.leftAnchor="30.0" AnchorPane.bottomAnchor="30.0">
      <Button fx:id="homeButton" text="Back to Home" onAction="#goToHome" styleClass="button"/>
      <Button fx:id="logoutButton" text="Log Out" onAction="#handleLogout" styleClass="button"/>
   </HBox>

</AnchorPane>
