<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane prefHeight="700.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="vidmot.HelloController"
            stylesheets="@../css/styles.css"
            styleClass="anchor-root">

    <children>
        <!-- Title -->
        <Label layoutX="0" layoutY="10" prefWidth="900.0"
               styleClass="title-label"
               text="The Golden Circle Tour from Reykjavik" />

        <!-- Image Section with Stacked Images -->
        <HBox layoutX="100" layoutY="60" spacing="20">
            <!-- Main Large Image -->
            <ImageView fx:id="tour6Image" fitHeight="320" fitWidth="500"
                       styleClass="main-image"
                       pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../images/tour6.png" />
                </image>
            </ImageView>

            <!-- Stacked Small Images -->
            <VBox spacing="10">
                <ImageView fitHeight="155" fitWidth="200"
                           styleClass="small-image"
                           pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/tour6-2.png" />
                    </image>
                </ImageView>

                <ImageView fitHeight="155" fitWidth="200"
                           styleClass="small-image"
                           pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/tour6-3.png" />
                    </image>
                </ImageView>
            </VBox>
        </HBox>

        <!-- Main Content Section -->
        <VBox layoutX="100" layoutY="400" prefWidth="700.0" spacing="20"
              styleClass="content-box">

            <!-- Description Header -->
            <TextFlow>
                <Text styleClass="description-title"
                      wrappingWidth="700"
                      text="Journey through Iceland’s iconic Golden Circle, where geysers, waterfalls, and historic landscapes showcase nature’s raw beauty." />
            </TextFlow>

            <!-- Two-Column Layout -->
            <HBox spacing="40">
                <!-- Left Column: Tour Details -->
                <VBox spacing="10" prefWidth="300">
                    <HBox spacing="10">
                        <Text styleClass="info-label" text="Tour starts:" />
                        <Text styleClass="info-value" text="Reykjavik" />
                    </HBox>

                    <HBox spacing="10">
                        <Text styleClass="info-label" text="Duration:" />
                        <Text styleClass="info-value" text="8 hours" />
                    </HBox>

                    <HBox spacing="10">
                        <Text styleClass="info-label" text="Minimum age:" />
                        <Text styleClass="info-value" text="6 years old" />
                    </HBox>

                    <!-- Spacer -->
                    <Region prefHeight="20" />

                    <!-- Book Now Button -->
                    <Button prefHeight="45" prefWidth="250"
                            styleClass="book-button"
                            text="Book Now" />
                </VBox>

                <!-- Right Column: Description Box -->
                <TextFlow prefWidth="350"
                          styleClass="description-box">
                    <Text styleClass="body-text"
                          wrappingWidth="350"
                          text="Hop onboard this small group minibus tour of the Golden Circle - Iceland's most popular travel route. This highly recommended tour starts with a pickup from your hotel in Reykjavik and takes you to see Iceland's most famous attractions, without the rush and hassle of the big buses." />
                </TextFlow>
            </HBox>
        </VBox>

        <!-- Back to Home Button -->
        <Button text="← Go Back" onAction="#goToHome"
                layoutX="100" layoutY="660" prefHeight="35" prefWidth="120"
                styleClass="back-button" />
    </children>
</AnchorPane>
