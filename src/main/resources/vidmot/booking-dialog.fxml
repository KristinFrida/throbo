<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.layout.ColumnConstraints?>
<AnchorPane prefWidth="550.0" prefHeight="600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="vidmot.BookingDialogController"
            stylesheets="@../css/styles.css"
            styleClass="booking-dialog">

    <children>
        <VBox spacing="15" alignment="CENTER" layoutX="50" layoutY="30" prefWidth="500">

            <!-- Title -->
            <Label fx:id="tourNameLabel" text="Booking: Tour Name" styleClass="booking-title" />

            <!-- Number of People Selection -->
            <HBox spacing="10" alignment="CENTER">
                <Label text="Number of People:" />
                <Spinner fx:id="peopleSpinner" styleClass="spinner" />
            </HBox>

            <!-- Total Price -->
            <Label fx:id="priceLabel" text="Total Price: 0 ISK" styleClass="booking-price" />

            <!-- Payment Information -->
            <Label text="Payment Information:" styleClass="section-title" />

            <!-- GridPane for better alignment -->
            <GridPane hgap="10" vgap="10" styleClass="payment-form">
                <columnConstraints>
                    <ColumnConstraints minWidth="120"/>
                    <ColumnConstraints minWidth="250"/>
                </columnConstraints>

                <Label text="Cardholder Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="cardHolderName" promptText="Enter cardholder name..."
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Card Number:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="cardNumber" promptText="16 digits" onKeyReleased="#validateCardNumber"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Expiration Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="cardExpiry" promptText="MM/YY"
                           GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="CCV:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="ccv" promptText="3 digits"
                           GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>

            <Label fx:id="errorLabel" text="" styleClass="payment-error" visible="false" />

            <!-- Buttons -->
            <HBox spacing="15" alignment="CENTER">
                <Button text="Pay &amp; Book" onAction="#confirmBooking" styleClass="booking-button" />
                <Button text="Cancel" onAction="#closeDialog" styleClass="cancel-button" />
            </HBox>

        </VBox>
    </children>
</AnchorPane>
