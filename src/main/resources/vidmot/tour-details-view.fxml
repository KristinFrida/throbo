<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane prefHeight="700.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="vidmot.TourDetailsController"
            stylesheets="@../css/styles.css"
            styleClass="anchor-root">

    <children>
        <!-- Title -->
        <Label fx:id="tourTitleLabel" layoutX="0" layoutY="10" prefWidth="900.0"
               styleClass="title-label"
               text="Tour Title Placeholder" />

        <!-- Image Section with Stacked Images -->
        <HBox layoutX="100" layoutY="60" spacing="20">
            <!-- Main Large Image -->
            <ImageView fx:id="tourMainImage" fitHeight="320" fitWidth="500"
                       styleClass="main-image"
                       pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../images/tour1.png" />
                </image>
            </ImageView>

            <!-- Stacked Small Images -->
            <VBox spacing="10">
                <ImageView fx:id="tourImage2" fitHeight="155" fitWidth="200"
                           styleClass="small-image"
                           pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/tour1-2.png" />
                    </image>
                </ImageView>

                <ImageView fx:id="tourImage3" fitHeight="155" fitWidth="200"
                           styleClass="small-image"
                           pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/tour1-3.png" />
                    </image>
                </ImageView>
            </VBox>
        </HBox>

        <!-- Main Content Section -->
        <VBox layoutX="100" layoutY="400" prefWidth="700.0" spacing="20"
              styleClass="content-box">

            <!-- Description Header -->
            <TextFlow>
                <Text fx:id="tourShortDescription" wrappingWidth="700"
                      styleClass="description-title"
                      text="Tour short description placeholder" />
            </TextFlow>

            <!-- Two-Column Layout -->
            <HBox spacing="40">
                <!-- Left Column: Tour Details -->
                <VBox spacing="10" prefWidth="300">
                    <HBox spacing="10">
                        <Text text="Start Location:" styleClass="info-label" />
                        <Text fx:id="tourStartLocation" text="Location placeholder" styleClass="info-value" />
                    </HBox>

                    <HBox spacing="10">
                        <Text text="Duration:" styleClass="info-label" />
                        <Text fx:id="tourDuration" text="Duration placeholder" styleClass="info-value" />
                    </HBox>

                    <HBox spacing="10">
                        <Text text="Minimum age:" styleClass="info-label" />
                        <Text fx:id="tourMinAge" text="Min age placeholder" styleClass="info-value" />
                    </HBox>

                    <!-- Spacer -->
                    <Region prefHeight="20" />

                    <!-- Book Now Button -->
                    <Button prefHeight="45" prefWidth="250"
                            text="Book Now"
                            styleClass="book-button" />
                </VBox>

                <!-- Right Column: Description Box -->
                <TextFlow prefWidth="350"
                          styleClass="description-box">
                    <Text fx:id="tourLongDescription" wrappingWidth="350"
                          text="Tour long description placeholder" styleClass="body-text" />
                </TextFlow>
            </HBox>
        </VBox>

        <!-- Back Button -->
        <Button text="â† Go Back" onAction="#goBack"
                layoutX="100" layoutY="660" prefHeight="35" prefWidth="120"
                styleClass="back-button" />
    </children>
</AnchorPane>
