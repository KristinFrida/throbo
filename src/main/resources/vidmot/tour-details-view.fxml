<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane prefHeight="700.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="vidmot.TourDetailsController"
            style="-fx-background-color: #f9f9f9; -fx-padding: 20px;">

    <children>
        <!-- Title -->
        <Label fx:id="tourTitleLabel" layoutX="0" layoutY="10" prefWidth="900.0"
               style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #222; -fx-alignment: center;"
               text="Tour Title Placeholder" />

        <!-- Image Section with Stacked Images -->
        <HBox layoutX="100" layoutY="60" spacing="20">
            <!-- Main Large Image -->
            <ImageView fx:id="tourMainImage" fitHeight="320" fitWidth="500"
                       style="-fx-border-radius: 15px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0.5, 0, 5);"
                       pickOnBounds="true" preserveRatio="true" >
                <image>
                    <Image url="@../images/tour1.png" />
                </image>
            </ImageView>

            <!-- Stacked Small Images -->
            <VBox spacing="10">
                <ImageView fx:id="tourImage2" fitHeight="155" fitWidth="200"
                           style="-fx-border-radius: 10px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 6, 0.3, 0, 4);"
                           pickOnBounds="true" preserveRatio="true" >
                    <image>
                        <Image url="@../images/tour1-2.png" />
                    </image>
                </ImageView>

                <ImageView fx:id="tourImage3" fitHeight="155" fitWidth="200"
                           style="-fx-border-radius: 10px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 6, 0.3, 0, 4);"
                           pickOnBounds="true" preserveRatio="true" >
                <image>
                        <Image url="@../images/tour1-3.png" />
                    </image>
                </ImageView>
            </VBox>
        </HBox>

        <!-- Main Content Section -->
        <VBox layoutX="100" layoutY="400" prefWidth="700.0" spacing="20"
              style="-fx-background-color: #ffffff; -fx-border-color: #ddd; -fx-border-radius: 10px; -fx-padding: 20px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 8, 0.3, 0, 4);">

            <!-- Description Header -->
            <TextFlow>
                <Text fx:id="tourShortDescription" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-fill: #333;"
                      wrappingWidth="700" text="Tour short description placeholder" />
            </TextFlow>

            <!-- Two-Column Layout -->
            <HBox spacing="40">

                <!-- Left Column: Tour Details -->
                <VBox spacing="10" prefWidth="300">
                    <HBox spacing="10">
                        <Text fx:id="tourStartLocation" style="-fx-font-size: 14px; -fx-fill: #666;" text="Location placeholder" />
                    </HBox>

                    <HBox spacing="10">
                        <Text fx:id="tourDuration" style="-fx-font-size: 14px; -fx-fill: #666;" text="Duration placeholder" />
                    </HBox>

                    <HBox spacing="10">
                        <Text fx:id="tourMinAge" style="-fx-font-size: 14px; -fx-fill: #666;" text="Min age placeholder" />
                    </HBox>

                    <!-- Spacer -->
                    <Region prefHeight="20" />

                    <!-- Book Now Button -->
                    <Button prefHeight="45" prefWidth="250"
                            style="-fx-font-size: 18px; -fx-background-color: #28a745; -fx-background-radius: 25px; -fx-text-fill: white; -fx-font-weight: bold;"
                            text="Book Now" />
                </VBox>

                <!-- Right Column: Description Box -->
                <TextFlow prefWidth="350"
                          style="-fx-border-color: #ddd; -fx-background-color: #f7f7f7; -fx-border-radius: 10px; -fx-padding: 10px;">
                    <Text fx:id="tourLongDescription" style="-fx-font-size: 14px; -fx-fill: #333;"
                          wrappingWidth="350" text="Tour long description placeholder" />
                </TextFlow>

            </HBox>
        </VBox>

        <!-- Back Button -->
        <Button text="← Go Back" onAction="#goBack"
                layoutX="100" layoutY="660" prefHeight="35" prefWidth="120"
                style="-fx-font-size: 14px; -fx-background-color: transparent;
               -fx-border-color: #bbb; -fx-border-radius: 20px;
               -fx-text-fill: #333; -fx-padding: 5px;" />

    </children>
</AnchorPane>
