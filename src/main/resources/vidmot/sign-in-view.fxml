<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="bakendi.UserController"
            fx:id="signUpRoot"
            prefWidth="300" prefHeight="400">

    <VBox fx:id="signUpBox" spacing="15" alignment="CENTER"
          AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20"
          AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">

        <Label fx:id="signUpTitle" text="Sign Up"/>

        <GridPane fx:id="signUpForm" hgap="10" vgap="10">
            <Label fx:id="usernameLabel" text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="newUsername" promptText="Enter username" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label fx:id="passwordLabel" text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="newPassword" promptText="Enter password" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label fx:id="emailLabel" text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="newEmail" promptText="Enter email" onKeyReleased="#validateEmail" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>

        <Label fx:id="MissingInputDataForNewUser"/>

        <HBox fx:id="signUpButtonRow" spacing="10" alignment="CENTER">
            <Button fx:id="fxSignUpButton" text="Sign Up" onAction="#newSignUp"/>
            <Button fx:id="fxSignUpCancelButton" text="Cancel" onAction="#goToLoginFromSignUP"/>
        </HBox>

    </VBox>
</AnchorPane>
