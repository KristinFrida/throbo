<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="vidmot.UserController"
            stylesheets="@../css/styles.css"
            prefHeight="250.0" prefWidth="320.0">

    <VBox alignment="CENTER" spacing="15.0" >
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="New Sign up"/>

        <GridPane hgap="10" vgap="10">
            <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="newUsername" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <PasswordField fx:id="newPassword" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="newEmail" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>

        <Label fx:id="MissingInputDataForNewUser" styleClass="error-label"/>

        <HBox spacing="10">
            <Button text="Sign up" onAction="#newSignUp"/>
            <Button onAction="#goToLoginFromSignUP" text="Cancel" />
        </HBox>


    </VBox>
</AnchorPane>
