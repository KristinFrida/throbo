<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="vidmot.HelloController"
            stylesheets="@../css/styles.css">
    <VBox prefHeight="200.0" prefWidth="100.0" />

    <VBox spacing="15" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <HBox alignment="CENTER_LEFT">
            <Label fx:id="outputUsername" styleClass="welcome-label" text="Welcome " />
        </HBox>
        <!-- Top Login Section -->
        <HBox alignment="CENTER_RIGHT">
            <Button fx:id="fxLoginTakki" mnemonicParsing="false" onAction="#goToLogin" prefHeight="30.0" prefWidth="152.0" text="Login" />
        </HBox>
        <!-- Search Area -->
        <HBox fx:id="fxLeitarvel" alignment="CENTER_LEFT" spacing="10">
            <TextField fx:id="fxLeitarvelTexti" promptText="Search..." HBox.hgrow="ALWAYS" />
            <DatePicker fx:id="fxDagatal" />
            <Button fx:id="fxLeitarvelTakki" mnemonicParsing="false" onAction="#handleSearch" text="Search" />
        </HBox>
        <!-- Main Content SplitPane -->
        <SplitPane dividerPositions="0.2" VBox.vgrow="ALWAYS">
            <items>
                <!-- Left Pane: Filters -->
                <AnchorPane fx:id="fxAdalsvaedid" prefWidth="100.0">
                    <children>
                        <Label fx:id="fxTextiFyrirOfanVerdHakbox" layoutX="14.0" layoutY="72.0"
                               style="-fx-font-weight: bold; -fx-font-size: 14px;"
                               text="VerÃ°hugmynd" />
                        <VBox layoutX="14.0" layoutY="114.0" spacing="10">
                            <CheckBox fx:id="fxVerdbil1" mnemonicParsing="false" text="CheckBox" />
                            <CheckBox fx:id="fxVerdbil2" mnemonicParsing="false" text="CheckBox" />
                            <CheckBox fx:id="fxVerdbil3" mnemonicParsing="false" text="CheckBox" />
                            <CheckBox fx:id="fxVerdbil4" mnemonicParsing="false" text="CheckBox" />
                        </VBox>
                    </children>
                </AnchorPane>

                <!-- Right Pane: Grid of Views -->
                <AnchorPane>
                    <children>
                        <Label fx:id="fxTextiFyrirOfanGrid" layoutX="14.0" layoutY="5.0" prefWidth="395.0"
                               style="-fx-font-weight: bold; -fx-font-size: 16px;" text="" />
                        <VBox fx:id="searchResultsContainer" alignment="CENTER" layoutX="14.0" layoutY="30.0"
                              spacing="10"
                              style="-fx-background-color: yellow; -fx-border-color: red; -fx-border-width: 2px;"
                              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="27.0">
                        </VBox>
                        <GridPane fx:id="fxTourGridPane" hgap="15" vgap="15"
                                  AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="27.0">
                            <!-- Define Columns -->
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" minWidth="150.0" prefWidth="200.0" />
                                <ColumnConstraints hgrow="ALWAYS" minWidth="150.0" prefWidth="200.0" />
                                <ColumnConstraints hgrow="ALWAYS" minWidth="150.0" prefWidth="200.0" />
                            </columnConstraints>
                            <!-- Define Rows -->
                            <rowConstraints>
                                <RowConstraints minHeight="120.0" prefHeight="150.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="120.0" prefHeight="150.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="120.0" prefHeight="150.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="120.0" prefHeight="150.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <!-- Cell 1 -->
                                <VBox alignment="CENTER" onMouseClicked="#handleCellClick" prefHeight="150.0" prefWidth="180.0" spacing="10"
                                      styleClass="grid-cell" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                    <children>
                                        <ImageView fx:id="cellImage1" fitHeight="100" fitWidth="160" preserveRatio="true">
                                            <image>
                                                <Image url="@../images/tour1.png" />
                                            </image>
                                        </ImageView>
                                        <Label styleClass="cell-title" text="Northern Lights" />
                                    </children>
                                </VBox>

                                <!-- Cell 2 -->
                                <VBox alignment="CENTER" onMouseClicked="#handleCellClick" prefHeight="150.0" prefWidth="180.0" spacing="10"
                                      styleClass="grid-cell" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                    <children>
                                        <ImageView fx:id="cellImage2" fitHeight="100" fitWidth="160" preserveRatio="true">
                                            <image>
                                                <Image url="@../images/tour2.png" />
                                            </image>
                                        </ImageView>
                                        <Label styleClass="cell-title" text="Whale Watching" />
                                    </children>
                                </VBox>

                                <!-- Cell 3 -->
                                <VBox alignment="CENTER" onMouseClicked="#handleCellClick" prefHeight="150.0" prefWidth="180.0" spacing="10"
                                      styleClass="grid-cell" GridPane.columnIndex="2" GridPane.rowIndex="0">
                                    <children>
                                        <ImageView fx:id="cellImage3" fitHeight="100" fitWidth="160" preserveRatio="true">
                                            <image>
                                                <Image url="@../images/tour3.png" />
                                            </image>
                                        </ImageView>
                                        <Label styleClass="cell-title" text="Blue Lagoon" />
                                    </children>
                                </VBox>

                                <!-- Additional cells go here -->
                            </children>
                        </GridPane>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </VBox>
    <VBox prefHeight="200.0" prefWidth="100.0" />
</AnchorPane>
