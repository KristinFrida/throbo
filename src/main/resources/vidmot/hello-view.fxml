<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="vidmot.HelloController">

    <VBox spacing="15" AnchorPane.bottomAnchor="0.0"
