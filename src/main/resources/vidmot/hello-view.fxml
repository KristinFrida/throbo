        <HBox fx:id="fxLeitarvel" alignment="CENTER_LEFT" spacing="10">
            <TextField fx:id="fxLeitarvelTexti" promptText="Search..." HBox.hgrow="ALWAYS" />
            <DatePicker fx:id="fxDagatal" />
            <Button fx:id="fxLeitarvelTakki" mnemonicParsing="false" text="Search" />
        </HBox>

