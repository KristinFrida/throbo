        <HBox alignment="CENTER_LEFT">
            <Label fx:id="outputUsername" text="Welcome " styleClass="welcome-label"/>
        </HBox>
        <!-- Top Login Section -->
        <HBox alignment="CENTER_RIGHT">
            <Button fx:id="fxLoginTakki"
                    mnemonicParsing="false"
                    prefHeight="30.0"
                    prefWidth="152.0"
                    text="Login"
                    onAction="#goToLogin"/>
        </HBox>

